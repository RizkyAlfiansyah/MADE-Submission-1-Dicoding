<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rizky.madefinalsubmission">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission
        android:name="com.rizky.madefinalsubmission.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.rizky.madefinalsubmission.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/movie"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/movie"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name=".widget.FavMovieWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/fav_movie_widget_info" />
        </receiver>

        <provider
            android:name=".provider.FavMovieProvider"
            android:authorities="com.rizky.madefinalsubmission"
            android:exported="true"
            android:readPermission="com.rizky.madefinalsubmission.READ_DATABASE"
            android:writePermission="com.rizky.madefinalsubmission.WRITE_DATABASE" />

        <service
            android:name=".widget.FavMovieService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <receiver
            android:name=".view.NotificationReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".view.NotificationSettingActivity" />
        <activity android:name=".view.DetailActivity" />
        <activity android:name=".view.MainActivity"></activity>
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>